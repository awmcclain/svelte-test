{
	"name": "sapper-firebase-typescript-graphql-tailwindcss-actions-template",
	"description": "A template that includes Sapper for Svelte, Firebase functions and hosting, TypeScript and TypeGraphQL, Tailwind CSS, ESLint and EditorConfig, and automatic building and deployment with GitHub Actions",
	"keywords": [
		"sapper",
		"firebase",
		"typegraphql",
		"typescript",
		"eslint",
		"postcss",
		"purgecss",
		"github-actions",
		"svelte",
		"cssnano",
		"tailwindcss",
		"apollo-server",
		"graphql"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/babichjacob/sapper-firebase-typescript-graphql-tailwindcss-actions-template.git"
	},
	"license": "MIT",
	"version": "2020.06.17",
	"scripts": {
		"eslint": "eslint",
		"eslint:fix": "eslint --fix ./*.js ./src/*.ts ./src/components/**/*.svelte ./src/graphql/**/*.ts ./src/routes/**/*.svelte ./src/routes/**/*.ts ./functions/*.js",
		"firebase": "firebase",
		"firebase:deploy": "firebase deploy",
		"firebase:deploy:export": "firebase deploy --only hosting",
		"sapper": "sapper",
		"sapper:build": "cross-env NODE_ENV=production sapper build --legacy",
		"sapper:export": "cross-env NODE_ENV=production sapper export --legacy",
		"build:rmdir": "rimraf - functions/__sapper__/build",
		"build:mkdir": "mkdirp functions/__sapper__/build",
		"build:cp": "ncp __sapper__/build functions/__sapper__/build",
		"static:rmdir": "rimraf - __sapper__/export",
		"static:mkdir": "mkdirp __sapper__/export",
		"static:cp": "ncp static __sapper__/export",
		"static:404:cp": "ncp __sapper__/export/404/index.html __sapper__/export/404.html",
		"static:404:rmdir": "rimraf - __sapper__/export/404",
		"dev": "sapper dev",
		"prod": "run-s build:rmdir build:mkdir sapper:build build:cp static:rmdir static:mkdir static:cp",
		"start": "node __sapper__/build",
		"deploy": "run-s prod firebase:deploy",
		"export": "run-s sapper:export static:404:cp static:404:rmdir",
		"deploy:export": "run-s export firebase:deploy:export"
	},
	"dependencies": {
		"compression": "^1.7.4",
		"express": "^4.17.1",
		"node-fetch": "^2.6.0",
		"sirv": "^0.4.6"
	},
	"devDependencies": {
		"@babel/core": "^7.10.2",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/plugin-transform-runtime": "^7.10.1",
		"@babel/preset-env": "^7.10.2",
		"@babel/runtime": "^7.10.2",
		"@fullhuman/postcss-purgecss": "^2.1.0",
		"@rollup/plugin-babel": "^5.0.3",
		"@rollup/plugin-commonjs": "^13.0.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^8.0.1",
		"@rollup/plugin-replace": "^2.3.3",
		"@rollup/plugin-typescript": "^4.1.2",
		"@tailwindcss/custom-forms": "^0.2.1",
		"@tailwindcss/ui": "^0.3.0",
		"@types/compression": "^1.7.0",
		"@types/express": "^4.17.3",
		"@types/node-fetch": "^2.5.7",
		"@typescript-eslint/eslint-plugin": "^3.1.0",
		"@typescript-eslint/parser": "^3.1.0",
		"apollo-server-express": ">=2.14.2",
		"bufferutil": "^4.0.1",
		"class-validator": "^0.12.2",
		"cross-env": "^7.0.2",
		"cssnano": "^4.1.10",
		"eslint": "^7.2.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-plugin-import": "^2.20.1",
		"eslint-plugin-svelte3": "^2.7.3",
		"firebase-tools": "^8.4.2",
		"graphql": "^15.0.0",
		"mkdirp": "^1.0.3",
		"ncp": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^7.0.32",
		"postcss-import": "^12.0.1",
		"postcss-load-config": "^2.1.0",
		"postcss-preset-env": "^6.7.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rollup": "^2.13.1",
		"rollup-plugin-svelte": "^5.2.2",
		"rollup-plugin-terser": "^6.1.0",
		"sapper": "^0.27.11",
		"svelte": "^3.23.0",
		"svelte-preprocess": "^3.9.0",
		"tailwindcss": "^1.3.5",
		"tslib": "^2.0.0",
		"type-graphql": "^1.0.0-rc.2",
		"typescript": "^3.9.5",
		"utf-8-validate": "^5.0.2"
	}
}
